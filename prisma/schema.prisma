// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum BudgetType {
  HOURS
  FEES
}

enum BudgetReset {
  NEVER
  MONTHLY
}

enum ProjectAccess {
  PUBLIC
  PRIVATE
}

enum InvoiceBlockStatus {
  ACTIVE
  COMPLETED
}

// Models

model Workspace {
  id        String   @id @default(uuid())
  name      String
  ownerId   String   // Could be linked to a User model later if using Auth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clients   Client[]
  projects  Project[]
  tags      Tag[]
}

model Client {
  id          String   @id @default(uuid())
  name        String
  address     String?
  currency    String   @default("USD")
  defaultRate Float?
  color       String   @default("text-slate-600")
  budgetLimit Float    @default(0)

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  projects      Project[]
  invoiceBlocks InvoiceBlock[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Project {
  id          String        @id @default(uuid())
  name        String
  color       String        @default("text-slate-600") // Hex or Tailwind class
  isFavorite  Boolean       @default(false)
  isArchived  Boolean       @default(false)
  access      ProjectAccess @default(PUBLIC)

  // Budget Logic
  budgetType  BudgetType    @default(HOURS)
  budgetReset BudgetReset   @default(NEVER)
  budgetLimit Float         @default(0) // 0 means no limit
  hourlyRate  Float?

  // Relations
  clientId    String?
  client      Client?       @relation(fields: [clientId], references: [id], onDelete: SetNull)

  workspaceId String
  workspace   Workspace     @relation(fields: [workspaceId], references: [id])

  timeEntries TimeEntry[]
  tags        Tag[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model TimeEntry {
  id          String    @id @default(uuid())
  description String?
  
  startTime   DateTime
  endTime     DateTime? // Nullable if timer is currently running
  duration    Int?      // Calculated seconds. Null if running.
  
  isBillable  Boolean   @default(true)
  
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tags        Tag[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Indexes for performance
  @@index([projectId])
  @@index([startTime])
}

model Tag {
  id          String      @id @default(uuid())
  name        String
  color       String?
  isSystem    Boolean     @default(false)

  workspaceId String
  workspace   Workspace   @relation(fields: [workspaceId], references: [id])

  timeEntries TimeEntry[]
  projects    Project[]

  @@unique([workspaceId, name])
}

model InvoiceBlock {
  id                  String             @id @default(uuid())
  clientId            String
  client              Client             @relation(fields: [clientId], references: [id], onDelete: Cascade)

  hoursTarget         Float              @default(10)
  hoursCarriedForward Float              @default(0)

  startDate           DateTime           @default(now())
  endDate             DateTime?

  status              InvoiceBlockStatus @default(ACTIVE)
  notes               String?

  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([clientId])
  @@index([status])
}
